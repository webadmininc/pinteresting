<div class="panel panel-default">
  <div class="panel-heading">
    <div class="panel-title">
        <p id="notice"><%= notice %></p>
         <h1>Listing Pins</h1>
    </div>
  </div>
    <div class="panel-body">
        <table >
          <thead>
            <tr>
              <th>Image</th>
              <th>Description</th>
              <th>Email</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @pins.each do |pin| %>
              <tr>
                <td style="padding-right: 10px" ><%= image_tag pin.image.url %></td>
                <td style="padding-right: 10px"><%= pin.description %></td>
                <td style="padding-right: 10px"><%= pin.user.email %></td>
                <td><%= link_to 'Show', pin %></td>
                <% if pin.user == current_user %>
                <td><%= link_to 'Edit', edit_pin_path(pin) %></td>
                <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>


    <br>

  <div class="panel-footer">
    <% if user_signed_in? %>
        <%= link_to 'New Pin', new_pin_path, class: "btn btn-primary" %>
    <% end %>

  </div>
</div>